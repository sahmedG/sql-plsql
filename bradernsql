CREATE TABLE  "PFE_REFFERAL_ITEM" 
   (	
  "PFE_REFFERAL_ID" NUMBER(9,0) NOT NULL ENABLE, 
	"PFE_REFFERAL_CATEGORY" varchar(20),
  "PFE_REFFERAL_CODE" VARCHAR2(10) NOT NULL ENABLE, 
	"PFE_REFFERAL_NAME" VARCHAR2(100),
	"PFE_REFFERAL_NAME_LOCAL" VARCHAR2(200),
	"PFE_REFFERAL_DESCTIPTION" VARCHAR2(255),  
	"CREATED_BY" VARCHAR2(20), 
	"CREATED_ON" DATE, 
	"CREATED_AT" VARCHAR2(20), 
	"UPDATED_BY" VARCHAR2(20), 
	"UPDATED_ON" DATE, 
	"UPDATED_AT" VARCHAR2(20), 
	 CONSTRAINT "PFE_REFFERAL_ITEM_PK" PRIMARY KEY ("PFE_REFFERAL_ID") ENABLE
   );
   
   select INTERVENTION_DESCTIPTION from PFE_INTERVENTION_ITEM where INTERVENTION_NAME = (select SAMPLE_MANY_TO_TEXT(:P18_BARRIERS) from dual);

   select INTERVENTION_DESCTIPTION from PFE_INTERVENTION_ITEM where INTERVENTION_NAME = :P18_BARRIERS;
   select * from PFE_FORM;
   
   select * from PFE_ITEMS where PFE_ITEM_CATEGORY = 'Barrier';